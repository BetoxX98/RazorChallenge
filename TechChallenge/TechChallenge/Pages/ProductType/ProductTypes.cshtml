@page
@model ProductTypeModel

<h2>ProductTypes List</h2>

<div class="d-flex justify-content-end">
    <a asp-page="AddProductType" class="btn btn-primary mb-3">Add New Product Type</a>
</div>

@if (Model.ProductTypes == null || !Model.ProductTypes.Any())
{
    <p>No products found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Color</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var productType in Model.ProductTypes)
            {
                <tr>
                    <td>@productType.Name</td>
                    <td>@productType.Description</td>
                    <td>@productType.Color</td>
                    <td class="text-end">
                        <a asp-page="EditProductType" asp-route-id="@productType.Id" class="btn btn-secondary">Edit</a>
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-product-type-id="@productType.Id">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>

        <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteModalLabel">Deletion confirmation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Are you sure you want to remove this product type?
                    </div>
                    <div class="modal-footer">
                        <form method="post">
                            <input type="hidden" name="ProductTypeId" id="productTypeIdToDelete" />
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </table>
}

<script>
    const deleteModal = document.getElementById('deleteModal');
    deleteModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const productId = button.getAttribute('data-product-type-id');
        const inputProductId = document.getElementById('productTypeIdToDelete');
        inputProductId.value = productId;
    });
</script>
