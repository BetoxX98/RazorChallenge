@page
@model AddProductModel
<h2>Edit Product</h2>

<form method="post">
    <div class="form-group">
        <label for="name">Product Name</label>
        <input type="text" class="form-control" id="name" name="ProductPost.Name" required />
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" class="form-control" id="price" name="ProductPost.Price" required step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
