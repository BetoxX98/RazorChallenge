@page
@model EditProductModel

<div class="d-flex justify-content-end">
    <a asp-page="Products" class="btn btn-secondary">Volver</a>
</div>

<h2>Edit Product</h2>
@if (Model.ProductPut == null || Model.ProductPut.TypeId == null)
{
    <p>Product not found.</p>
}
else
{
    <form method="post">
        <input type="hidden" name="ProductPut.Id" value="@Model.ProductPut.Id" />
        <div class="form-group mt-3">
            <label for="name">Product Name</label>
            <input type="text" class="form-control" id="name" name="ProductPut.Name" required value="@Model.ProductPut.Name" />
        </div>
        @if (Model.ProductPut.Price != null)
        {
            <div class="form-group mt-3">
                <label for="price">Product Price</label>
                <input type="number" step="0.01" class="form-control" name="ProductPut.Price" required value="@Model.ProductPut.Price.ToString()" />
            </div>
        }
        <div class="form-group mt-3">
            <label for="productType">Product Type</label>
            <select class="form-control" asp-for="ProductPut.TypeId">
                @foreach (var productType in Model.ProductTypes)
                {
                    <option value="@productType.Id">@productType.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-5">Save</button>
    </form>
}