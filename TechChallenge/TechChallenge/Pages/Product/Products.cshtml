@page
@model ProductsModel

<h2>Product List</h2>

<a asp-page="AddProduct" class="btn btn-primary mb-3">Add New Product</a>

@if (Model.Products == null || !Model.Products.Any())
{
    <p>No products found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>
                        <a asp-page="EditProduct" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                        @* <a asp-page="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger">Delete</a> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
